@model Project2.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}


<div>
    <h2 style="color: #dc3545;text-shadow: 1px 1px 1px #dc3545">Delete Department</h2>
    <br />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfNurses)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfNurses)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfParamedics)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfParamedics)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitSecretaryContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitSecretaryContactNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

    <br />
    <div>
        <a asp-action="Index" style="color: #dc3545">Back to List of Departments</a>
    </div>
</div>
