@model Project2.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
  
}

<h2 style=" text-align: center; color: #1149a1;text-shadow: 2px 2px 2px #f22f39">Doctor @Html.DisplayFor(model => model.FullName)</h2>
<h2 style=" text-align: center; color: #1149a1;text-shadow: 2px 2px 2px #f22f39">Department of @Html.DisplayFor(model => model.Department.Name) </h2>

<br />
<div>
    &emsp;&emsp;  &emsp;&emsp;  &emsp;&emsp;  &emsp;&emsp;  &emsp;&emsp;&emsp;&emsp;  &emsp;&emsp;  &emsp;&emsp; &emsp;&emsp;  &emsp;&emsp; &emsp;&emsp; &emsp;
    <img src="~/images/@Model.ProfilePicture" 
         height="235" width="255"
         asp-append-version="true" />
</div>
<div>
    <dl class="row">

        <dt class="col-sm-11" style="text-align:center">
            &emsp;&emsp;&emsp;&emsp;&emsp;@Html.DisplayNameFor(model => model.HireDate)
        </dt>
        <dd class="col-sm-10" style="text-align:center">
            &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp;  &emsp;@Html.DisplayFor(model => model.HireDate)
        </dd>

        <dt class="col-sm-11" style="text-align:center">
            &emsp;&emsp;&emsp;&emsp;&emsp;@Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class="col-sm-10" style="text-align:center">
            &emsp;&emsp;&emsp;   &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp; &emsp;@Html.DisplayFor(model => model.Specialty)
        </dd>
        <dt class="col-sm-11" style="text-align:center">
            &emsp;&emsp;&emsp;&emsp;&emsp;@Html.DisplayNameFor(model => model.Subspecialty)
        </dt>
        <dd class="col-sm-10" style="text-align:center">
            &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp;   &emsp;&emsp;&emsp;  &emsp;@Html.DisplayFor(model => model.Subspecialty)
        </dd>

        <dt class="col-sm-11" style="text-align:center">
            &emsp;&emsp;&emsp;&emsp;&emsp;@Html.DisplayNameFor(model => model.Membership)
        </dt>
        <dd class="col-sm-10" style="text-align:center">
            &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp;  &emsp;&emsp;&emsp;  &emsp;@Html.DisplayFor(model => model.Membership)
        </dd>


    </dl>
    <p>
        &emsp; &emsp; &nbsp;  &emsp;&emsp;&emsp;&emsp;&emsp;&emsp; &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp; &emsp;&emsp;&emsp;&emsp;
        <a style=" color: #dc3545;text-shadow: 1px 1px 1px #dc3545" asp-action="MyPatients" asp-route-id="@Model.Id">View Patients</a>
    <p />
    &nbsp; &emsp; &emsp;&nbsp;&emsp;&nbsp;&emsp;&emsp;&emsp; &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp; &emsp;&emsp;&emsp;&emsp;
    <a style="color: #1b6ec2;text-shadow: 1px 1px 1px #1b6ec2" asp-action="Index">Back to List of Doctors</a>
   
</div>