@model IEnumerable<Project2.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<h1 style="        text-align: center;
        color: #1149a1;
        text-shadow: 2px 2px 2px #1149a1">DOCTORS</h1>
<br>

<p>
    &nbsp; &nbsp; &emsp; &nbsp; &nbsp;
    <a asp-action="Create"> Add a new doctor</a>
</p>


    <form asp-action="Index" method="get">

        <div class="form-actions no-color">
            <p>

                &nbsp; &nbsp;&emsp; &nbsp; &nbsp;
                <input type="text " style="width:20%" name="searchString"
                       placeholder="Enter doctor's name" value="@ViewData["FilterNames"]" />

                <input type="text " style="width:20%" name="doctorSpecialty"
                       placeholder="Search for a specialty" value="@ViewData["FilterSpecialties"]" />

                <input type="submit" value="Filter" />
            </p>

        </div>
    </form>


<style>
    #example1 {
        border: 1px solid;
        padding: 20px;
        box-shadow: 8px 10px #2965a4;
    }
</style>


@for (int i = 0; i < Model.Count(); i += 3)
{
    <div class="row">
        @foreach (var item in Model.Skip(i).Take(3))
        {
            <div class="col-md-4">
                <div style="text-align: center;">

                    <img id="example1" src="~/images/@item.ProfilePicture"
                         height="235" width="255"
                         asp-append-version="true" />

                    <p></p>
                    <p>
                        <a asp-action="Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.FullName) </a><br />


                    </p>
                    <p> Specialist in @Html.DisplayFor(modelItem => item.Specialty) </p>
                  
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </p>
                </div>
            </div>}
    </div>}