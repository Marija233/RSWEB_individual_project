@model Project2.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}


<div>
    <h2 style="color: #dc3545;text-shadow: 1px 1px 1px #dc3545">Delete Appointment</h2>
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Symptoms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Symptoms)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Examination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Examination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diagnosis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diagnosis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Therapy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Therapy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalReport)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalReport)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 

    </form>
    <br />
    <div>
        <a asp-action="Index" style="color: #dc3545">Back to List of Appointments</a>
    </div>
</div>
